# Tremor Guard Backend - Environment Variables
# 复制此文件为 .env 并填写实际值

# ============================================================
# 应用配置 (Application Settings)
# ============================================================
APP_NAME=TremorGuard
APP_ENV=development          # development / production
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this

# ============================================================
# 数据库配置 (Database - Zeabur PostgreSQL)
# ============================================================
DATABASE_URL=postgresql+asyncpg://username:password@hostname:port/database

# 示例 Zeabur 格式:
# DATABASE_URL=postgresql+asyncpg://root:xxx@svc.zeabur.com:5432/tremor_guard

# ============================================================
# Redis 配置 (Redis - 可选)
# ============================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================
# JWT 认证配置 (JWT Authentication)
# ============================================================
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================
# Claude API 配置 (AI Doctor)
# ============================================================
ANTHROPIC_API_KEY=your-anthropic-api-key

# ============================================================
# CORS 配置 (前端地址)
# ============================================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================
# 设备认证 (Hardware Device)
# ============================================================
DEVICE_API_KEY=your-device-api-key
